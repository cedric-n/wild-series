{% extends 'base.html.twig' %}

{% block body %}
    <div>
        <h1>{{ program }} - Season {{ seasonNumber }} - Episode {{ episodeNumber }} : {{ episodeTitle }}</h1>
        <p>
            {{ synopsis }}
        </p>

            <div class="border">
                <h2>Comment</h2>
                {% for listComment in listComments %}
                    <div class="border text-center">
                        {{ listComment.id }}.
                        <p>
                            {{ listComment.comment }}
                            {% if app.user == listComment.author %}

                                <a href="{{ path("comment_edit", { id : listComment.id }) }}">edit</a>

                            {% elseif  app.user == 'ROLE_ADMIN' %}
                                <a href="{{ path("comment_edit", { id : listComment.id }) }}">edit</a>
                            {% endif %}
                        </p>
                    </div>
                {% endfor %}
            </div>

            {% if app.user %}
            <div>
                {{ include('comment/_form.html.twig') }}
            </div>
                <a class="btn-primary" href="{{ path('comment_new') }}">Add a new Comment</a>
            {% endif %}


    </div>
{% endblock %}

